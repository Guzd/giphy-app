{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "react-app",
        "prettier",
        "plugin:flowtype/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11
    },
    "plugins": [
        "react", "prettier", "flowtype"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "printWidth": 80,
              "trailingComma": "es5",
              "semi": true,
              "jsxSingleQuote": false,
              "singleQuote": true,
              "useTabs": true,
              "endOfLine":"auto"
            }
          ]
    }
}
